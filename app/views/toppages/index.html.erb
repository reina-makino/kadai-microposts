<% if logged_in? %>
    <div class='row'>
        <aside class='vol-md-4'>
            <%= form_for(@micropost) do |f| %>
                <div class='fourm-group'>
                    <%= f.text_area :content, class: 'form-control', row: 5 %>
                </div>
                <%= f.submit 'post', class: 'btn btn-primary btn-block' %>
            <% end %>
        </aside>
        <div class='col-xs-8'>
            <%= render 'microposts/microposts', microposts: @microposts %>
        </div>
    </div>
<% else %>
    <div class="center jumbotron">
        <div class="text-center">
            <h1>Welcome to Microposts</h1>
            <%= link_to "Sign up now!", signup_path, class: 'btn btn-log btn-primary' %>
        </div>
    </div>
<% end %>
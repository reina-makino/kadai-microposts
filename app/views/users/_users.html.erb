<% if users.any? %>
    <ul class="media-list">
        <% users.each do |user| %>
            <li class="media">
                <div class="media-left">
                    <img class="media-object image-rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
                </div>
                <div class="media-body">
                    <div>
                        <%= user.name %>
                    </div>
                    <div>
                        <profile><%= link_to "profile", user_path(user) %></profile>
                    </div>
                </div>
            </li>
            <li><%= link_to 'Logout', logout_path, method: :delete %></li>
        <% end %>
    </ul>
    <%= paginate users %>
<% end %>